{
  "manifest_version" : 2,
  "name" : "Journalist",
  "description" : "Client side journalist apps",
  "version" : "1.0",
  "permissions" : [
    "tabs",
    "storage",
    "proxy",
    "webRequest",
    "*://*/",
    "webRequestBlocking",
    "cookies"
  ],
  "icons" : {
    "16" : "assets/images/icon16.png",
    "48" : "assets/images/icon48.png",
    "128" : "assets/images/icon128.png"
  },
  "browser_action" : {
    "default_icon" : "assets/images/icon16.png"
  },
  "background" : {
    "scripts": [
      "assets/javascripts/background.js"
    ]
  }
}
